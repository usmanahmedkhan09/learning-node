<%- include('../includes/head.ejs')
    %>
    <link rel="stylesheet"
          href="/css/forms.css">
    <link rel="stylesheet"
          href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs')
            %>
            <main>
                <% if
                   (errorMessage)
                   {
                   %>
                    <div class="user-message user-message--error">
                        <%= errorMessage
                            %>
                    </div>
                    <% }
                       %>
                        <form class="product-form"
                              action="/admin/<% if(editing ) { %>edit-product<% } else { %>add-product<% } %>"
                              method="POST">
                            <div class="form-control">
                                <label for="title">Title</label>
                                <input type="text"
                                       name="title"
                                       id="title"
                                       value="<% if
                               (editing ||  hasError)
                               {
                               %> <%= product.title %> <% } %>"
                                       class="<%= validationErrors.find(x => x.param == 'title') ? 'invalid' : '' %>">
                            </div>
                            <div class="form-control">
                                <label for="imageUrl">Image URL</label>
                                <input type="text"
                                       name="imageUrl"
                                       id="imageUrl"
                                       value="<% if
                               (editing ||  hasError)
                               {
                               %> <%= product.imageUrl %> <% } %>"
                                       class="<%= validationErrors.find(x => x.param == 'imageUrl') ? 'invalid' : '' %>">
                            </div>
                            <div class="form-control">
                                <label for="price">Price</label>
                                <input type="text"
                                       name="price"
                                       id="price"
                                       step="0.01"
                                       value="<% if
                               (editing ||  hasError)
                               {
                               %> <%= product.price %> <% } %>"
                                       class="<%= validationErrors.find(x => x.param == 'price') ? 'invalid' : '' %>">
                            </div>
                            <div class="form-control">
                                <label for="description">Description</label>
                                <textarea name="description"
                                          id="description"
                                          rows="5"
                                          class="<%= validationErrors.find(x => x.param == 'description') ? 'invalid' : '' %>"><% if
                                  (editing ||  hasError)
                                  {
                                  %> <%= product.description %> <% } %>
                                </textarea>
                            </div>
                            <% if(editing)
                               {
                               %>
                                <input hidden
                                       type="text"
                                       name="productId"
                                       value="<%= product._id %>">
                                <input type="text"
                                       hidden
                                       name="_csrf"
                                       value="<%= csrfToken %>">
                                <% }
                                   %>
                                    <input type="text"
                                           hidden
                                           name="_csrf"
                                           value="<%= csrfToken %>">
                                    <button class="btn"
                                            type="submit">
                                        <% if
                                           (editing)
                                           {
                                           %> Update Product <% }
                                               else
                                               {
                                               %> Add Product <% }
                                                   %>
                                    </button>
                        </form>
            </main>
            <%- include('../includes/end.ejs')
                %>